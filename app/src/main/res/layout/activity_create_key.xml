<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dfish.cryptomessenger.CreateKeyActivity">

    <EditText
        android:id="@+id/eRandomKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="new key"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/eRandomKey"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/eRandomKey" />

    <Button
        android:id="@+id/bAddKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/eRandomKey"
        app:layout_constraintBaseline_toBaselineOf="@+id/bGenerate" />
</android.support.constraint.ConstraintLayout>
